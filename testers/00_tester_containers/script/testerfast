	# If there's a skull in the pedestal...
	IF $CONT_OFFER = 6
	THEN
		SET TILE (8, 6) = 3
		SET_FIRE_ZONE_TILES 15, 0, 15, 6
	END

	IF TRUE
	THEN
		ADD_SPRITE 8, 2, 9
	END

	IF PLAYER_IN_X_TILES 15, 15
	THEN
		WIN GAME
	END

	IF JUST_INTERACTED
	IF ARG = 8
	THEN
		TEXTBOX 0
	END

	IF TRUE
	THEN 
		ADD_CONTAINER $CONT_SKULL, 1, 2
		ADD_CONTAINER $CONT_PUFF, 13, 3
		SET_FIRE_ZONE_TILES 12, 3, 12, 3
	END IF
