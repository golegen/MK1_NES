DEFALIAS
	$A1 = 1
	$A2 = 2
END

ENTERING GAME
	IF $A1 = 2
	THEN
		SWAP 1, 2
		SWAP $A1, $A2
		SWAP FLAG 1, FLAG 2

		FLIPFLOP 1
		FLIPFLOP $A1
		FLIPFLOP FLAG 1
		FLIPFLOP #1
		FLIPFLOP $A1

		INC $A1, $A2
		INC $A1, 2
	END

	IF ARG ~ FLAG 2
	IF ARG ~ $A2
	THEN
		INC $A2, 2
		SET FIRE_ZONE_TILES 1,2, 3, 4
		SET_FIRE_ZONE 10,20,30,40
		TEXT "HOLA, DON PEPITO"
		TEXT HOLA,_DON_PEPITO
	END
END
